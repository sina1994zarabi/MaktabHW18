@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome, @InMemoryDb.Currentuser.Username</h2>

<p>Please choose an option:</p>

<div>
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Browse Products</a>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Browse Categories</a>
    <a asp-controller="User" asp-action="Logout" class="btn btn-danger">Logout</a>
</div>
